<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/list_item_selector"  >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="25dip"
            android:layout_height="46dip"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:src="@drawable/gpx"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_logincn"
            android:layout_width="wrap_content"
            android:layout_height="46dip"
            android:layout_marginLeft="10dip"
            android:textColor="#ff000000"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="Across the changjiang river"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_marginLeft="30dip"
        android:layout_below="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dip">

        <ImageView
            android:layout_width="10dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:src="@drawable/icon_ruler"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_miles"
            android:layout_width="60dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:textColor="#979696"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="12.8"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="10dip"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:src="@drawable/icon_locate"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_marginLeft="10dip"
            android:textColor="#979696"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="beijing"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_unbind"
        android:layout_width="wrap_content"
        android:layout_height="46dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:textColor="#ff6c00"
        android:textSize="13sp"
        android:gravity="center_vertical"
        android:text=""
        android:layout_centerVertical="true"/>

</RelativeLayout>